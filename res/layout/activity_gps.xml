<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="@drawable/about_activity_background"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText,SpUsage" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coördinaten"
        android:textColor="@color/Ivory"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:text="Latitude"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLat"
        android:layout_marginTop="12dp"
        android:text="Longitude"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textViewAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLong"
        android:layout_marginTop="12dp"
        android:text="Altitude"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAlt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAlt"
        android:layout_marginTop="12dp"
        android:text="Speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSpeed"
        android:layout_marginTop="12dp"
        android:text="MaxSpeed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Ivory" />

    <TextView
        android:id="@+id/textMaxSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Ivory" />

    <Button
        android:id="@+id/resetMaxSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textMaxSpeed"
        android:layout_marginTop="6dp"
        android:onClick="resetMaxSpeed"
        android:text="reset"
        android:textColor="@color/Red" />

    <Button
        android:id="@+id/getMaxSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMaxSpeed"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/resetMaxSpeed"
        android:onClick="showCoordMaxSpeed"
        android:text="Coördinaten"
        android:textColor="@color/Red" />

</RelativeLayout>